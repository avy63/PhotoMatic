<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImageEditFragment">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal"
           android:weightSum="10"
           >
           <TextView
               android:layout_width="0dp"
               android:layout_height="80dp"
               android:layout_weight="3"
               android:text="Brightness"

               android:textSize="20sp"
               android:textColor="@color/black"
               android:gravity="center"

               />

           <SeekBar
               android:id="@+id/globalbrightnessSeekBar"
               android:layout_width="0dp"
               android:layout_weight="7"
               android:layout_height="80dp"
               android:layout_alignParentTop="true"
               android:layout_gravity="center_horizontal|top"
               />
       </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="3"
            android:text="Contrast"

            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"

            />

        <SeekBar
            android:id="@+id/globalcontrastSeekBar"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal|top"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="3"
            android:text="Saturation"

            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"

            />

        <SeekBar
            android:id="@+id/globalSaturationSeekBar"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal|top"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="3"
            android:text="Sharpen"

            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"

            />

        <SeekBar
            android:id="@+id/globalSharpenSeekBar"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal|top"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="3"
            android:text="Gama"

            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"

            />

        <SeekBar
            android:id="@+id/globalgamaSeekbar"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal|top"
            />
    </LinearLayout>
</LinearLayout>

</ScrollView>